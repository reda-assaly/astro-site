import ClientsCarousel from '../components/ClientsCarousel.astro';
import CaseStudy from '../components/CaseStudy.astro';
import TestimonialCarousel from '../components/TestimonialCarousel.astro';
import ClientsCarouselSwiper from '../components/ClientsCarouselSwiper.astro';
import BlogsFooterGrid from '../components/BlogsFooterGrid.astro';
import Partners from '../components/Partners.astro';
import FooterDesktop from '../components/FooterDesktop.astro';
import FooterMobile from '../components/FooterMobile.astro';
