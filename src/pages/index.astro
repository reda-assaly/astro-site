<Layout title="Assaly.ch">
	
		
		<div class="mobile lg:hidden">
			<div class="fullscreen flex flex-col h-[calc(100svh-171px)]  justify-between">
				<div class="flex flex-col">
					<section>
						<div class="px-[19px] mt-[30px]">
