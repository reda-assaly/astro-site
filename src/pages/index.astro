					</section>
					<ClientsCarouselSwiper />
					
				</section>
			</div>
	
			<section id="case-studies" class="bg-white ">
				<h3 class="font-inter text-[#171F29] uppercase text-[14px] pl-[19px] leading-4 font-[700] pt-[26px] ">Future proof your e-commerce</h3>
				<div class="mx-[14px] h-[1px] bg-[#171F29]/[0.2]"></div>
				<CaseStudiesList />
			</section>

			<section class="bg-white pt-5 pb-[7px]">
				<TestimonialCarousel />
			</section>
			<section>
				<div class=" bg-cover flex flex-col justify-end h-[calc(100svh-96px)]" style="background-image: url('/case-studies.webp'); background-position:right center">
